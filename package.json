{
  "name": "electron-next-boilerplate",
  "version": "0.2.3",
  "main": "app/main/main.js",
  "description": "A boilerplate for Electron + Next.",
  "scripts": {
    "start": "electron .",
    "next:build": "run-s renderer:build renderer:export",
    "renderer:build": "next build app/renderer",
    "renderer:export": "next export app/renderer",
    "dist": "run-s next:build \"electron:build {@}\" --",
    "electron:build": "build --dir --x64 --publish=never",
    "lint": "tslint app/**/*.ts{,x}",
    "test": "run-s next:build \"test:jest {@}\" --",
    "test:jest": "jest"
  },
  "author": "shamofu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/electron-next-boilerplate.git"
  },
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/out/**",
      "!app/**/*.map"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/next.config.js",
      "!app/renderer/out/**",
      "!app/renderer/tests/**",
      "!app/renderer/.next/**"
    ],
    "coverageDirectory": ".coverage",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/next": "^8.0.4",
    "@types/react": "^16.4.13",
    "@types/styled-jsx": "^2.2.5",
    "@zeit/next-typescript": "^1.1.0",
    "electron": "^5.0.0",
    "electron-builder": "^20.28.3",
    "jest": "^24.7.1",
    "next": "^8.1.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-test-renderer": "^16.8.0",
    "spectron": "^5.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.11.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "antd": "^3.16.6",
    "app-root-path": "^2.1.0",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.4",
    "webpack": "^4.30.0"
  }
}
